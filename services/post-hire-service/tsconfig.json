{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": [
            "./@types",
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "express"
        ]
    },
    "include": [
        "src",
        "@types"
    ],
    "exclude": [
        "node_modules",
    ]
}