{
  "info": {
    "name": "Chat Service API",
    "description": "API collection for testing Chat & Notification Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3003",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "user123",
      "type": "string"
    },
    {
      "key": "userType",
      "value": "user",
      "type": "string"
    },
    {
      "key": "conversationId",
      "value": "",
      "type": "string"
    },
    {
      "key": "messageId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Conversations",
      "item": [
        {
          "name": "Create Conversation",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('conversationId', response.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer test-token"
              },
              {
                "key": "x-user-id",
                "value": "{{userId}}"
              },
              {
                "key": "x-user-type",
                "value": "{{userType}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"participantId\": \"user456\",\n    \"participantType\": \"user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/conversations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations"]
            }
          }
        },
        {
          "name": "Get All Conversations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer test-token"
              },
              {
                "key": "x-user-id",
                "value": "{{userId}}"
              },
              {
                "key": "x-user-type",
                "value": "{{userType}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/conversations?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Conversation by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer test-token"
              },
              {
                "key": "x-user-id",
                "value": "{{userId}}"
              },
              {
                "key": "x-user-type",
                "value": "{{userType}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/conversations/{{conversationId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations", "{{conversationId}}"]
            }
          }
        },
        {
          "name": "Delete Conversation",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer test-token"
              },
              {
                "key": "x-user-id",
                "value": "{{userId}}"
              },
              {
                "key": "x-user-type",
                "value": "{{userType}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/conversations/{{conversationId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conversations", "{{conversationId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Send Message",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('messageId', response.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer test-token"
              },
              {
                "key": "x-user-id",
                "value": "{{userId}}"
              },
              {
                "key": "x-user-type",
                "value": "{{userType}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"conversationId\": \"{{conversationId}}\",\n    \"content\": \"Hello, this is a test message!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/messages",
              "host": ["{{baseUrl}}"],
              "path": ["api", "messages"]
            }
          }
        },
        {
          "name": "Get Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer test-token"
              },
              {
                "key": "x-user-id",
                "value": "{{userId}}"
              },
              {
                "key": "x-user-type",
                "value": "{{userType}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/messages/{{conversationId}}?page=1&limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["api", "messages", "{{conversationId}}"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            }
          }
        },
        {
          "name": "Mark Message as Read",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer test-token"
              },
              {
                "key": "x-user-id",
                "value": "user456"
              },
              {
                "key": "x-user-type",
                "value": "user"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/messages/{{messageId}}/read",
              "host": ["{{baseUrl}}"],
              "path": ["api", "messages", "{{messageId}}", "read"]
            }
          }
        },
        {
          "name": "Mark All Messages as Read",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer test-token"
              },
              {
                "key": "x-user-id",
                "value": "user456"
              },
              {
                "key": "x-user-type",
                "value": "user"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/messages/conversations/{{conversationId}}/read-all",
              "host": ["{{baseUrl}}"],
              "path": ["api", "messages", "conversations", "{{conversationId}}", "read-all"]
            }
          }
        }
      ]
    }
  ]
}

